    -- UI THEME UPDATE
    -----------------------------------------------------------------
    local function UpdateUITheme()
        MainFrame.BackgroundColor3 = RGBToColor3(Config.BackgroundColor)
        MainFrame.BackgroundTransparency = Config.UITransparency
        MainStroke.Color = RGBToColor3(Config.ThemeColor)
        TopBar.BackgroundColor3 = RGBToColor3(Config.SectionColor)
        TopBarCover.BackgroundColor3 = RGBToColor3(Config.SectionColor)
        Title.TextColor3 = RGBToColor3(Config.ThemeColor)
        UpdatesBtn.BackgroundColor3 = RGBToColor3(Config.ThemeColor)

        MinimizeTopBtn.BackgroundColor3 = Color3.fromRGB(100, 100, 110)
        MinimizeBtn.BackgroundColor3 = RGBToColor3(Config.ThemeColor)
        MinimizeStroke.Color = RGBToColor3(Config.ThemeColor)

        Content.ScrollBarImageColor3 = RGBToColor3(Config.ThemeColor)
        
        for _, section in pairs(Content:GetChildren()) do
            if section:IsA("Frame") and section.Name ~= "UIListLayout" and section.Name ~= "UIPadding" then
                section.BackgroundColor3 = RGBToColor3(Config.SectionColor)
            end
        end
    end

